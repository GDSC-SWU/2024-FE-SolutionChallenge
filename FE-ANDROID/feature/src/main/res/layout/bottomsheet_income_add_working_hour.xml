<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_fill_top8_rec">

        <View
            android:id="@+id/view_income_add_working_hour_divider"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginHorizontal="140dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape_fill_grayf5_7_rec"
            android:backgroundTint="@color/gray_48"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_income_add_working_hour_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:includeFontPadding="false"
            android:textAppearance="@style/TextAppearance.FE.Bold_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_income_add_working_hour_divider"
            tools:text="Mon, Aug 17" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:padding="9dp"
            android:src="@drawable/ic_income_add_working_hour_calcel"
            app:layout_constraintBottom_toBottomOf="@id/tv_income_add_working_hour_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_income_add_working_hour_date" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_income_add_working_hour"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            app:dividerColor="@color/main_color"
            app:layout_constraintTop_toBottomOf="@id/tv_income_add_working_hour_date" />

        <TextView
            android:id="@+id/tv_income_add_working_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:includeFontPadding="false"
            android:text="@string/tv_income_add_working_hour"
            android:textAppearance="@style/TextAppearance.FE.Medium_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_income_add_working_hour" />

        <NumberPicker
            android:id="@+id/numberpicker_income_add_working_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:switchTextAppearance="@style/TextAppearance.FE.Regular_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_income_add_working_hour" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shape_fill_main_15_rec"
            android:includeFontPadding="false"
            android:text="Select"
            android:textAppearance="@style/TextAppearance.FE.Bold_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/numberpicker_income_add_working_hour" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>